# ===== APPLICATION =====
APP_NAME=Better Business Builder
APP_VERSION=1.0.0
ENVIRONMENT=production  # development, staging, production
DEBUG=false

# ===== DATABASE =====
DATABASE_URL=postgresql://bbbuser:CHANGE_ME@localhost:5432/bbb_production
DATABASE_PASSWORD=CHANGE_ME

# ===== REDIS =====
REDIS_URL=redis://localhost:6379/0

# ===== AUTHENTICATION =====
JWT_SECRET_KEY=CHANGE_ME_GENERATE_WITH_openssl_rand_hex_32
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ===== STRIPE =====
STRIPE_SECRET_KEY=sk_test_CHANGE_ME
STRIPE_PUBLISHABLE_KEY=pk_test_CHANGE_ME
STRIPE_WEBHOOK_SECRET=whsec_CHANGE_ME

# Stripe Price IDs (from Stripe Dashboard)
STRIPE_PRICE_PROFESSIONAL_MONTHLY=price_CHANGE_ME
STRIPE_PRICE_PROFESSIONAL_YEARLY=price_CHANGE_ME
STRIPE_PRICE_ENTERPRISE_MONTHLY=price_CHANGE_ME
STRIPE_PRICE_ENTERPRISE_YEARLY=price_CHANGE_ME
STRIPE_PRICE_UNLIMITED_MONTHLY=price_CHANGE_ME
STRIPE_PRICE_UNLIMITED_YEARLY=price_CHANGE_ME

# ===== EMAIL (SendGrid) =====
SENDGRID_API_KEY=SG.CHANGE_ME
SENDGRID_FROM_EMAIL=hello@bbb.com
SENDGRID_FROM_NAME=Better Business Builder

# ===== OPENAI =====
OPENAI_API_KEY=sk-CHANGE_ME
OPENAI_MODEL=gpt-4-turbo-preview

# ===== ANTHROPIC =====
ANTHROPIC_API_KEY=sk-ant-CHANGE_ME

# ===== MONITORING =====
SENTRY_DSN=https://CHANGE_ME@sentry.io/CHANGE_ME

# ===== PROMETHEUS =====
PROMETHEUS_PORT=9090

# ===== GRAFANA =====
GRAFANA_PASSWORD=CHANGE_ME

# ===== ENCRYPTION =====
ENCRYPTION_KEY=CHANGE_ME_GENERATE_WITH_Fernet_generate_key

# ===== CORS =====
CORS_ORIGINS=https://bbb.com,https://www.bbb.com

# ===== RATE LIMITING =====
RATE_LIMIT_PER_MINUTE=100

# ===== FEATURE FLAGS =====
ENABLE_AUTONOMOUS_MODE=true
ENABLE_REALTIME_UPDATES=true
ENABLE_AI_CONTENT_GENERATION=true

# ===== EXTERNAL SERVICES (Optional) =====
# Google Ads
GOOGLE_ADS_CLIENT_ID=
GOOGLE_ADS_CLIENT_SECRET=
GOOGLE_ADS_DEVELOPER_TOKEN=

# HubSpot CRM
HUBSPOT_API_KEY=

# Buffer (Social Media)
BUFFER_ACCESS_TOKEN=

# Twilio (SMS/Voice)
TWILIO_ACCOUNT_SID=
